/*录音内容的设置*/
.backgroundVoiceView {
    display: flex;
    margin-top: 10px;
    height: 80px;
    background-color: #e3e3e3;
}

.voiceView {
    display: flex;
    margin-top: 20px;
    margin-left: 20px;
    height: 36px;
    /*width: 40px;*/
}

.playVoice {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 0px;
    /*height: 40px;*/
}

.playImage{
    /*position: absolute;*/
    margin-top: 3px;
    width: 20px;
    height: 30px; 
}

.play-style{
  margin-left: -8px;
}

/*录音动画设置*/
.speak-style-view {
   display: flex;
   flex-direction: column; 
   align-items: center;
   margin-top: 160px;
}

.speak-style{
   /*position: relative;*/
   width: 50px;
   height: 80px;
   display: flex;
   flex-direction: column; 
   align-items: center;
   border-radius:25px; 
   background: #26A5FF;
}
.sound-style{
  position: absolute;
  width: 74rpx;
  height:150rpx;
  margin-top: 4rpx;
}

