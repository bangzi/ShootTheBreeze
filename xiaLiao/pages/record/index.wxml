<!--index.wxml-->

<scroll-view>
 <view wx:if="{{voices}}" class="common-list" style="margin-bottom:120rpx;">
<block  wx:for="{{voices}}">
     <view class="board">
	                <view class="cell"  >
	                    <view class="cell-bd" data-key="{{item.filePath}}" bindtap="gotoPlay" > 
                       		<!--<view  class="date">存储路径:{{item.filePath}}</view>-->
	                        <!--<view  class="date" >存储时间:{{item.createTime}}</view>-->
	                        <!--<view  class="date">音频大小:{{item.size}}KB</view>-->
	                    </view>  
						
	                </view>
        </view>
</block>
 </view>
 </scroll-view>
 
<view  wx:if="{{isSpeaking}}"  class="speak-style">
<image class="sound-style" src="../../images/voice_volume_1_blue@2x.png" ></image>
<image wx:if="{{j==2}}" class="sound-style" src="../../images/voice_volume_2_blue@2x.png" ></image>
<image wx:if="{{j==3}}" class="sound-style" src="../../images/voice_volume_3_blue@2x.png" ></image>
<image wx:if="{{j==4}}" class="sound-style" src="../../images/voice_volume_4_blue@2x.png" ></image>
<image wx:if="{{j==5}}"class="sound-style" src="../../images/voice_volume_5_blue@2x.png" ></image>
<image wx:if="{{j==6}}"class="sound-style" src="../../images/voice_volume_6_blue@2x.png" ></image>
 </view>
 <view class="record-style">
 <button class="btn-style"  bindlongtap="mylongtap" 
 bindtouchend="mytouchend" >按住 录音</button>
 </view>
